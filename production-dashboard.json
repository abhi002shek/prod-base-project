{
  "dashboard": {
    "title": "Production Cluster - Real-Time Monitoring",
    "tags": ["kubernetes", "production", "real-time"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Cluster Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(kube_node_info)",
            "legendFormat": "Total Nodes"
          }
        ]
      },
      {
        "id": 2,
        "title": "Total Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace='production'})",
            "legendFormat": "Production Pods"
          }
        ]
      },
      {
        "id": 3,
        "title": "Running Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{namespace='production',phase='Running'})",
            "legendFormat": "Running"
          }
        ]
      },
      {
        "id": 4,
        "title": "Pod Restarts (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(kube_pod_container_status_restarts_total{namespace='production'}[1h]))",
            "legendFormat": "Restarts"
          }
        ]
      },
      {
        "id": 5,
        "title": "Node CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)",
            "legendFormat": "{{instance}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0}
        ]
      },
      {
        "id": 6,
        "title": "Node Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "100 * (1 - ((node_memory_MemAvailable_bytes) / (node_memory_MemTotal_bytes)))",
            "legendFormat": "{{instance}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0}
        ]
      },
      {
        "id": 7,
        "title": "Pod CPU Usage (Production)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace='production',pod!=''}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Pod Memory Usage (Production)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace='production',pod!=''}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "decmbytes"}
        ]
      },
      {
        "id": 9,
        "title": "Network Traffic - Received",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{namespace='production'}[5m])) by (pod) / 1024",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "KBs"}
        ]
      },
      {
        "id": 10,
        "title": "Network Traffic - Transmitted",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{namespace='production'}[5m])) by (pod) / 1024",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "KBs"}
        ]
      },
      {
        "id": 11,
        "title": "Pod Status Timeline",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "kube_pod_info{namespace='production'}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "pod": "Pod Name",
                "node": "Node",
                "pod_ip": "Pod IP"
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "title": "Disk Usage by Node",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "100 - ((node_filesystem_avail_bytes{mountpoint='/',fstype!='rootfs'} * 100) / node_filesystem_size_bytes{mountpoint='/',fstype!='rootfs'})",
            "legendFormat": "{{instance}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0}
        ]
      },
      {
        "id": 13,
        "title": "Container Restarts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "rate(kube_pod_container_status_restarts_total{namespace='production'}[5m])",
            "legendFormat": "{{pod}}"
          }
        ]
      }
    ]
  }
}
